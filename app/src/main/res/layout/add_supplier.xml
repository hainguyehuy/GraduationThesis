<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Nhà Cung Cấp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/car_ui_icon_close"
            />



        <TextView
            android:id="@+id/tvNamePD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nhà cung cấp "
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Tên nhà cung cấp" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ nhà cung cấp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Địa chỉ nhà cung cấp" />
        <TextView
            android:id="@+id/tvColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Số điện thoại" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnADD"
            android:layout_width="match_parent"
            android:background="@drawable/button2_boder"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thêm nhà cung cấp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>