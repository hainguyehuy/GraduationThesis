<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.adapters.BeginCategoryFragment">


        <ImageView
            android:id="@+id/imgYonex"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/yonex"
            app:layout_constraintEnd_toStartOf="@+id/imgLining"
            app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imgLining"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/lining"
            app:layout_constraintEnd_toStartOf="@+id/imgMizuno"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imgVictor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"

            android:src="@drawable/victor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imgKumpo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"

            android:src="@drawable/kumpo"
            app:layout_constraintEnd_toStartOf="@+id/imgVS"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imgMizuno"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginEnd="20dp"
            android:src="@drawable/mizuno"
            app:layout_constraintEnd_toStartOf="@+id/imgKumpo"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imgVS"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/vs"
            app:layout_constraintEnd_toStartOf="@+id/imgVictor"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="62dp"
            android:text="Hãy chọn thương hiệu bạn thích"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/frmLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imgKumpo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>